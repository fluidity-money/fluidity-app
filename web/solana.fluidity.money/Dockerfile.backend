FROM fluidity/build-container:latest AS build

WORKDIR /usr/local/src/fluidity/web/solana.fluidity.money

COPY . .
RUN make backend

FROM fluidity/runtime-container:latest

COPY --from=build /usr/local/src/fluidity/web/solana.fluidity.money/solana.fluidity.money.o .

ENTRYPOINT [ \
	"wait-for-amqp", \
	"wait-for-database.sh", \
	"./solana.fluidity.money.o" \
]
